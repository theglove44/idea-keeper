{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default permissions for Idea Keeper desktop app",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "claude",
          "cmd": "claude",
          "args": true,
          "sidecar": false
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "claude",
          "cmd": "claude",
          "args": true,
          "sidecar": false
        }
      ]
    },
    "shell:allow-stdin-write",
    "shell:allow-kill",
    "fs:default"
  ]
}
